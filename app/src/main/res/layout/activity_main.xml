<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:background="@drawable/background2"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/NIE_TYKAC_ZAWARTOSCI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:elevation="10dp"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="#DFDFDF"
                android:drawableLeft="@drawable/ic_action_search"
                android:ems="10"
                android:hint="Wyszukaj"
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#000" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <LinearLayout
                    android:id="@+id/LL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D5D5D5"
                    android:elevation="5dp"
                    android:orientation="vertical"></LinearLayout>
            </ScrollView>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:cropToPadding="false"
            app:srcCompat="@drawable/leaf"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="-20dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="@string/wastic"
            android:textColor="#CC000000"
            android:textSize="50sp" />

        <Button
            android:id="@+id/buttonScanner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            android:text="Zeskanuj Produkt"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="Zaloguj się"
            android:textColor="#fff"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonToProfile"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:background="@color/colorPrimary"
            android:text="Do Profilu"
            android:textColor="#fff"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:text="Po więcej możliwości"
            android:textColor="#000" />
    </LinearLayout>

</RelativeLayout>